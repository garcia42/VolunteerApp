<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <FrameLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="10dp"
        android:background="#424de4">

        <ImageButton
            android:layout_gravity="start|center_vertical"
            android:id="@+id/closeOpportunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_clear_white_24dp"/>

        <com.varunest.sparkbutton.SparkButton
            android:layout_gravity="end"
            android:id="@+id/star_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:sparkbutton_activeImage="@drawable/heart_on"
            app:sparkbutton_iconSize="30dp"
            app:sparkbutton_inActiveImage="@drawable/heart_off"
            app:sparkbutton_primaryColor="@color/colorPrimary"
            app:sparkbutton_secondaryColor="@color/spark_secondary_color" />
    </FrameLayout>

    <ScrollView
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/opportunityName"
                android:text="Activity Name"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="22sp"
                android:padding="16dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bab8b8"            />

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/rsz_volunteer"
                android:layout_width="190dp"
                android:layout_height="130dp"
                android:layout_margin="8dp"
                android:id="@+id/imageView"/>

            <!--Place-->
            <RelativeLayout
                android:id="@+id/placeRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/placeImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:src="@drawable/ic_room_black_24dp" />

                <LinearLayout
                    android:layout_toRightOf="@id/placeImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/placeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:text="Frye Art Museum" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/address"
                        android:paddingLeft="4dp"
                        android:text="Address"/>

                    <TextView
                        android:id="@+id/zipCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:text="Zip Code" />
                </LinearLayout>
            </RelativeLayout>

            <!--Host-->
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/hostRelativeLayout">
                <ImageView
                    android:id="@+id/hostImageView"
                    android:src="@drawable/ic_person_black_24dp"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_width="wrap_content"/>
                <TextView
                    android:id="@+id/hostTextView"
                    android:text="Reading Partners"
                    android:paddingLeft="4dp"
                    android:layout_toRightOf="@id/hostImageView"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                </TextView>
            </RelativeLayout>

            <!--Time-->
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/timeRelativeLayout">
                <ImageView
                    android:id="@+id/timeImageView"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:padding="4dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <TextView
                    android:id="@+id/timeTextView"
                    android:text="Saturday, November 11"
                    android:textColor="#29961b"
                    android:paddingLeft="4dp"
                    android:layout_toRightOf="@id/timeImageView"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                </TextView>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#bab8b8"
                />

            <TextView
                android:id="@+id/description"
                android:padding="8dp"
                android:text="This is the description box. This is the description box. This is the description box. This is the description box. This is the description box. This is the description box. This is the description box. This is the description box. This is the description box."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>